[
  {
    "type": "tab",
    "label": "Image Banner",
    "sections": [
      {
        "label": "General",
        "settings": [
          {
            "type": "input",
            "label": "HTML ID",
            "id": "html_id"
          },
          {
            "type": "imageManager",
            "label": "First Image",
            "id": "first_image",
            "default": {
              "src": "",
              "type": "IMAGE_MANAGER"
            }
          },
          {
            "type": "input",
            "label": "First Image alt text",
            "id": "first_image_alt",
            "typeMeta": {
              "placeholder": "Descriptive text of first image"
            }
          },
          {
            "type": "range",
            "label": "Image overlay opacity",
            "id": "image_overlay_opacity",
            "default": "0",
            "typeMeta": {
              "rangeValues": {
                "min": "0",
                "max": "100",
                "step": "10",
                "unit": "%"
              }
            }
          },
          {
            "type": "select",
            "label": "Banner height",
            "id": "banner_height",
            "default": "adapt",
            "typeMeta": {
              "selectOptions": [
                {
                  "label": "Small",
                  "value": "small"
                },
                {
                  "label": "Medium",
                  "value": "medium"
                },
                {
                  "label": "Large",
                  "value": "large"
                },
                {
                  "label": "Adapt to First Image",
                  "value": "adapt"
                }
              ]
            }
          },
          {
            "type": "alignment",
            "label": "Desktop content position",
            "id": "desktop_content_pos",
            "typeMeta": {
              "display": "both"
            },
            "default": {
              "horizontal": "center",
              "vertical": "middle"
            }
          },
          {
            "label": "Desktop content alignment",
            "type": "alignment",
            "id": "desktop_alignment",
            "typeMeta": {
              "display": "horizontal"
            },
            "default": {
              "horizontal": "center"
            }
          },
          {
            "label": "Mobile content alignment",
            "type": "alignment",
            "id": "mobile_alignment",
            "typeMeta": {
              "display": "horizontal"
            },
            "default": {
              "horizontal": "center"
            }
          },
          {
            "type": "color",
            "label": "Container background color",
            "id": "container_bg_color",
            "default": "transparent"
          }
        ]
      },
      {
        "label": "Heading",
        "settings": [
          {
            "type": "text",
            "label": "Text",
            "id": "heading_text"
          },
          {
            "type": "select",
            "label": "Size",
            "id": "heading_size",
            "default": "h0",
            "typeMeta": {
              "selectOptions": [
                {
                  "label": "Small",
                  "value": "h2"
                },
                {
                  "label": "Medium",
                  "value": "h1"
                },
                {
                  "label": "Large",
                  "value": "h0"
                }
              ]
            }
          }
        ]
      },
      {
        "label": "Body",
        "settings": [
          {
            "type": "text",
            "label": "Text",
            "id": "body_text"
          },
          {
            "type": "select",
            "label": "Style",
            "id": "body_style",
            "default": "body",
            "typeMeta": {
              "selectOptions": [
                {
                  "label": "Body",
                  "value": "body"
                },
                {
                  "label": "Subtitle",
                  "value": "subtitle"
                },
                {
                  "label": "Uppercase",
                  "value": "caption-with-letter-spacing"
                }
              ]
            }
          }
        ]
      },
      {
        "label": "Button One",
        "settings": [
          {
            "label": "Button Text",
            "type": "input",
            "id": "button_one_text"
          },
          {
            "label": "Button Link",
            "type": "input",
            "id": "button_one_link",
            "typeMeta": {
              "placeholder": "/path/ or https://"
            }
          },
          {
            "label": "External Link",
            "type": "boolean",
            "id": "button_one_external",
            "default": false
          },
          {
            "label": "Button Color",
            "type": "select",
            "id": "button_one_color",
            "typeMeta": {
              "selectOptions": [
                {
                  "label": "Primary",
                  "value": "primary"
                },
                {
                  "label": "Secondary",
                  "value": "secondary"
                }
              ]
            },
            "default": "primary"
          }
        ]
      },
      {
        "label": "Button Two",
        "settings": [
          {
            "label": "Button Text",
            "type": "input",
            "id": "button_two_text"
          },
          {
            "label": "Button Link",
            "type": "input",
            "id": "button_two_link",
            "typeMeta": {
              "placeholder": "/path/ or https://"
            }
          },
          {
            "label": "External Link",
            "type": "boolean",
            "id": "button_two_external",
            "default": false
          },
          {
            "label": "Button Color",
            "type": "select",
            "id": "button_two_color",
            "typeMeta": {
              "selectOptions": [
                {
                  "label": "Primary",
                  "value": "primary"
                },
                {
                  "label": "Secondary",
                  "value": "secondary"
                }
              ]
            },
            "default": "primary"
          }
        ]
      },
      {
        "label": "TailwindCSS",
        "settings": [
          {
            "type": "input",
            "label": "TailwindCSS for Heading Text",
            "id": "twcss_heading"
          },
          {
            "type": "input",
            "label": "TailwindCSS for Body Text",
            "id": "twcss_body"
          },
          {
            "type": "input",
            "label": "TailwindCSS for Button",
            "id": "twcss_button"
          }
        ]
      }
    ]
  }
]
