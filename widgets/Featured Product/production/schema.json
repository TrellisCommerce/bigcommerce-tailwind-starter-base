                                                "selectOptions": [
                                                    {
                                                        "label": "Round",
                                                        "value": "round"
                                                    },
                                                    {
                                                        "label": "Square",
                                                        "value": "square"
                                                    },
                                                    {
                                                        "label": "Pill",
                                                        "value": "pill"
                                                    }
                                                ]
                                            }
                                        },
                                        {
                                            "type": "color",
                                            "label": "Button Color",
                                            "id": "fill_color",
                                            "default": "#444444"
